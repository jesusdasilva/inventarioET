{# MARCA LISTADO #}

{% extends "layout.twig" %}

{% block contenido %}

<legend>Listado de Gerencias</legend>

{% include 'mensaje_alerta.twig' %}

<a class="btn btn-primary" href=" {{ path('marcaNuevo') }}">Crea nueva Gerencia</a><br /><br />

<table class="table table-striped table-hover "> 
<thead>
    <tr>
        <th>Item</th>
        <th>Nombre Gerencia</th>
        <th>Acci√≥n</th>
    </tr>
</thead>
<tbody>
     
{% for registro in marcas %}
    
<tr>
    <td>{{ loop.index + (5 * pagina) }}</td>
    <td>{{ registro.nombre }}</td>
    <td>	
        <a href="{{ app.url_generator.generate('marcaBuscar', {'id': registro.id}) }}">
        <button type="button" class="btn btn-default btn-xs">
        <span class="glyphicon glyphicon-edit"></span>Modificar</button>
        </a>
        <a href="{{ app.url_generator.generate('marcaEliminar', {'id': registro.id}) }}" onclick="return confirm_delete();"> 
        <button type="button" class="btn btn-default btn-xs">
        <span class="glyphicon glyphicon-trash"></span>Eliminar</button>
        </a>
    </td>
</tr>

{% endfor %}

</tbody>
</table>

<p class="text-right">Total de Gerencias: {{numeroRegistro}}</p>

{% if numeroPaginas > 0 %}
    {% include 'marca/marca_listado_paginador.twig' %}
{% endif %}

{% endblock %}
