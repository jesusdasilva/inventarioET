{# SISTEMA OPERATIVO PAGINADO #}

<ul class="pagination">
<li><a href="{{ app.url_generator.generate('sistemaOperativoListar', {'pagina':0}) }}">&laquo;</a></li>
  
{% for i in range (0, numeroPaginas) %}
    <li {% if (pagina == i) %} class="active" {% endif %} >
    {% if (pagina == i) %}
        <span>{{i}}<span class="sr-only"></span></span>
    {% else %}
        <a href="{{ app.url_generator.generate('sistemaOperativoListar', {'pagina':i}) }}" >    
        {{i}}
        </a>
   {% endif %}   
    </li>
{% endfor %}
  
<li><a href="{{ app.url_generator.generate('sistemaOperativoListar', {'pagina':numeroPaginas}) }}">&raquo;</a></li>
</ul>
