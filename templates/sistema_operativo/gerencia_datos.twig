{% extends "layout.twig" %}

{% block contenido %}
    
<!--FORMULARIO DATOS-->
{% if gerencia.id is defined %}
<form class="form-horizontal" role="form" action="{{ app.url_generator.generate('gerenciaActualizar') }}" method="post">
    <input type="hidden" name="id" id="id" value="{{ gerencia.id }}" />
{% else %}
    <form class="form-horizontal" role="form" action="{{ app.url_generator.generate('gerenciaGuardar') }}" method="post">
{% endif%}
<fieldset>

    <!--NOMBRE DEL FORMULARIO-->
    <legend>Datos de la Gerencia</legend>
    <!--/.NOMBRE DEL FORMULARIO-->

    {% include 'mensaje_alerta.twig' %}
    
    <!--TEXT INPUT NOMBRE-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="nombre">Nombre de la Gerencia</label>  
        <div class="col-md-4">
            <input required id="nombre" name="nombre"  placeholder="Campo obligatorio" class="form-control input-md text-uppercase" type="text" {% if gerencia.nombre is defined %}disabled="" value="{{ gerencia.nombre }}"{% endif %}>
        <span class="help-block">Ingrese el Nombre de la gerencia a registrar</span>  
        </div>
    </div>
    <!--/.TEXTO INPUT NOMBRE-->

    <!--TEXTAREA OBSERVACIONES-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="observacion">Observacion</label>
        <div class="col-md-4">                     
        <textarea class="form-control" id="observacion" name="observacion" >{% if gerencia.observacion is defined %}{{ gerencia.observacion }}{% endif %}</textarea>
        </div>
    </div>
    <!--/.TEXTAREA OBSERVACIONES-->

    <!--BUTON-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="enviar"></label>
        <div class="col-md-4">
            <button  class="btn btn-primary">Guardar</button>
        </div>
    </div>
    <!--/.BUTON-->

</fieldset>
</form>
<!--./FORMULARIO DATOS-->
      
{% endblock %}

